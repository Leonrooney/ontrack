// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  password      String?   // Hashed password
  passwordHash  String?   // Alternative field name for seed compatibility
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  activityEntries ActivityEntry[]
  goals         Goal[]
  achievements  Achievement[]
  reminders     Reminder[]
  workoutSessions WorkoutSession[]
  customExercises CustomExercise[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  id         String   @id @default(cuid())
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model ActivityEntry {
  id          String   @id @default(cuid())
  userId      String
  title       String?
  description String?
  date        DateTime @default(now())
  duration    Int?     // Duration in minutes
  category    String?
  tags        String?  // JSON array of tags
  // Fitness tracking fields
  steps       Int?
  distanceKm  Float?
  calories    Int?
  heartRateAvg Int?
  workouts    Int?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, date])
  @@map("activity_entries")
}

model Goal {
  id          String    @id @default(cuid())
  userId      String
  title       String?
  description String?
  // Legacy fields
  targetDate  DateTime?
  targetValue Float?
  currentValue Float    @default(0)
  unit        String?   // e.g., "hours", "days", "count"
  status      String    @default("active") // active, completed, paused, cancelled
  category    String?
  // New fields for seed compatibility
  type        String?   // e.g., "STEPS", "WORKOUTS", "DISTANCE"
  targetInt   Int?
  targetDec   Float?
  period      String?   // e.g., "DAILY", "WEEKLY", "MONTHLY"
  startDate   DateTime?
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("goals")
}

model Achievement {
  id          String   @id @default(cuid())
  userId      String
  title       String
  description String?
  icon        String?
  unlockedAt  DateTime @default(now())
  category    String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("achievements")
}

model Reminder {
  id          String   @id @default(cuid())
  userId      String
  title       String
  description String?
  scheduledAt DateTime
  completed   Boolean  @default(false)
  recurring   String?  // e.g., "daily", "weekly", "monthly", null for one-time
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("reminders")
}

model Faq {
  id          String   @id @default(cuid())
  question    String
  answer      String
  category    String?
  order       Int      @default(0)
  tags        String?  // JSON array of tags
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("faqs")
}

model Exercise {
  id           String      @id @default(cuid())
  name         String
  bodyPart     String?
  equipment    String?
  instructions String?
  mediaUrl     String?     // thumbnail or GIF
  isActive     Boolean     @default(true)
  createdAt    DateTime    @default(now())
  workoutItems WorkoutItem[]

  @@unique([name])
  @@map("exercises")
}

model CustomExercise {
  id         String     @id @default(cuid())
  userId     String
  name       String
  bodyPart   String?
  equipment  String?
  mediaUrl   String?    // thumbnail or GIF
  isActive   Boolean    @default(true)
  createdAt  DateTime   @default(now())

  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  workoutItems WorkoutItem[]

  @@unique([userId, name])
  @@index([userId, name])
  @@map("custom_exercises")
}

model WorkoutSession {
  id          String       @id @default(cuid())
  userId      String
  date        DateTime     @default(now())
  title       String?      // e.g., "Push Day", "Legs", optional
  notes       String?
  durationMin Int?         // optional; filled later
  createdAt   DateTime     @default(now())

  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  items       WorkoutItem[]

  @@index([userId, date])
  @@map("workout_sessions")
}

model WorkoutItem {
  id           String          @id @default(cuid())
  workoutId    String
  exerciseId   String?
  customId     String?
  orderIndex   Int             @default(0)  // UI ordering

  workout      WorkoutSession  @relation(fields: [workoutId], references: [id], onDelete: Cascade)
  exercise     Exercise?       @relation(fields: [exerciseId], references: [id], onDelete: Restrict)
  custom       CustomExercise? @relation(fields: [customId], references: [id], onDelete: Restrict)
  sets         WorkoutSet[]

  @@index([workoutId, orderIndex])
  @@map("workout_items")
}

model WorkoutSet {
  id           String         @id @default(cuid())
  itemId       String
  setNumber    Int
  weightKg     Decimal?       @db.Decimal(6,2) // allow null for bodyweight sets
  reps         Int
  rpe          Decimal?       @db.Decimal(3,1) // optional perceived exertion
  notes        String?
  createdAt    DateTime       @default(now())

  item         WorkoutItem    @relation(fields: [itemId], references: [id], onDelete: Cascade)

  @@index([itemId, setNumber])
  @@map("workout_sets")
}
